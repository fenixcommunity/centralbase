type Address {
    name: String!
    account: Account
}

extend type Query { #we can also implement other obj -> implements
    findAllAddresses: [Address]!
    countAddresses: Long!
}

extend type Mutation {
    newAddress(title: String!, isbn: String!, pageCount: Int, account: ID!) : Address!
    deleteAddress(id: ID!) : Boolean
    updateAddressPageCount(pageCount: Int!, id: ID!) : Address!
}

